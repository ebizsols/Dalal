<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0">
	<title>{{ common.name }} | {{ lang.text_forgotten_password }}</title>
	<link rel="icon" type="image/x-icon" href="{{ theme.favicon }}">
	<link rel="stylesheet" href="public/css/style.min.css" />
	<script src="public/js/vendor.min.js"></script>
	<script src="public/js/custom.js"></script>
</head>
<body>
	
	<div class="lgn-background">
		<div class="lgn-wrapper">
			<div class="lgn-logo text-center">
				<a href="{{ common.url }}"><img src="{{ theme.logo }}" alt="{{ common.name }}"></a>
				<p class="lgn-type">{{ lang.text_admin_portal }}</p>
			</div>
			<div id="login-form" class="lgn-form pb-4">
				<form class="form-vertical" action="{{ action }}" method="post">
					{% if error %}
					<div class="alert alert-danger alert-dismissable">{{ error }}<a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">Ã—</a></div>
					{% endif %}
					<input type="hidden" name="_token" value="{{ token }}">
					<div class="lgn-input form-group">
						<label class="col-form-label col-sm-12">{{ lang.text_email_address }}</label>
						<div class="col-sm-12">
							<input class="form-control" type="text" name="mail" id="forgot-mail" placeholder="{{ lang.text_email_address }}" autocomplete="off">
						</div>
					</div>
					<div class="lgn-input form-group">
						<label class="col-form-label col-sm-12">{{ lang.text_what_is~' '~random(1, 9)~' '~lang.text_plus~' '~random(1, 30) }} =</label>
						<div class="col-sm-12">
							<input type="text" id="lgn-bot" class="form-control" placeholder="?" autocomplete="off">
						</div>
					</div>
					<div class="lgn-forgot">
						<a href="{{ common.url_route }}login">{{ lang.text_login }}</a>
					</div>
					<div class="lgn-submit">
						<button type="submit" id="forgot-submit" class="btn btn-primary btn-pill btn-lg" name="forgot">Send Reset Link</button>
					</div>
				</form>
			</div>	
		</div>
	</div>
</body>
</html>
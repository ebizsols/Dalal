<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
	<title>{{ lang.text_payment_history }}</title>
	<link rel="stylesheet" href="{{ info.url }}public/css/inv-pdf.css" type="text/css">
</head>
<body>
	<div class="inv-template">
		<div class="company pl-30 pr-30">
			<table>
				<tbody>
					<tr>
						<td class="info">
							<div class="logo"><img src="{{ info.url~info.logo }}" alt="logo"></div>
							<div class="name">{{ info.legal_name }}</div>
							<div class="text">{{ info.address|join(', ') }}</div>
						</td>
						<td class="text-right"></td>
					</tr>
				</tbody>
			</table>
		</div>
		<div class="meta pl-30 pr-30">
			<table>
				<tbody>
					<tr>
						<td class="bill-to v-aling-bottom">
							<div class="title">{{ result.firstname~result.lastname }}</div>
							<div class="text">{{ result.email }}</div>
							<div class="text">{{ result.mobile }}</div>
						</td>
						<td class="info v-aling-bottom">
							<table class="text-right">
								<tbody>
									<tr>
										<td>{{ lang.text_salary_grade }}</td>
										<td>{{ result.salarytemplate.grade }}</td>
									</tr>
									<tr>
										<td>{{ lang.text_basic_salary }}Basic Salary</td>
										<td>{{ result.abbr~result.salarytemplate.basic_salary }}</td>
									</tr>
									<tr>
										<td>{{ lang.text_month }}Month</td>
										<td>{{ result.month_year|date(info.date_my_format) }}</td>
									</tr>
									<tr>
										<td>{{ lang.text_date }}Date</td>
										<td>{{ result.date_of_joining|date(info.date_format) }}</td>
									</tr>
									<tr>
										<td>{{ lang.text_payment_method }}Payment Method</td>
										<td>{{ result.payment_method }}</td>
									</tr>
								</tbody>
							</table>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
		<div class="item pl-30 pr-30">
			<div style="display: inline-block; vertical-align: top; width: 48%; margin-right: 3%">
				<table>
					<thead>
						<tr>
							<th colspan="2">{{ lang.text_allowances }}</th>
						</tr>
					</thead>
					<tbody>
						{% for value in result.salarytemplate.allowance %}
							<tr>
								<td>{{ value.label }}</td>
								<td>{{ result.abbr~value.value }}</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
			<div style="display: inline-block; vertical-align: top; width: 48%;">
				<table>
					<thead>
						<tr>
							<th colspan="2">{{ lang.text_deduction }}</th>
						</tr>
					</thead>
					<tbody>
						{% for value in result.salarytemplate.deduction %}
							<tr>
								<td>{{ value.label }}</td>
								<td>{{ result.abbr~value.value }}</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
		<div class="item pl-30 pr-30">
			<div style="display: inline-block; vertical-align: top; width: 29%;">
			</div>
			<div style="display: inline-block; vertical-align: top; width: 70%">
				<table>
					<thead>
						<tr>
							<th colspan="2">{{ lang.text_total_salary_details }}</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>{{ lang.text_gross_salary }}</td>
							<td>{{ result.abbr~result.salarytemplate.gross_salary }}</td>
						</tr>
						<tr>
							<td>{{ lang.text_total_deduction }}</td>
							<td>{{ result.abbr~result.salarytemplate.total_deduction }}</td>
						</tr>
						<tr>
							<td>{{ lang.text_net_salary }}</td>
							<td>{{ result.abbr~result.salarytemplate.net_salary }}</td>
						</tr>
						<tr>
							<td>{{ lang.text_advance }}</td>
							<td>{{ result.abbr~result.advance }}</td>
						</tr>
						<tr>
							<td>{{ lang.text_deduction }}</td>
							<td>{{ result.abbr~result.deduction }}</td>
						</tr>
						<tr>
							<td class="text-dark font-500">{{ lang.text_payment_amount }}</td>
							<td class="text-primary">{{ result.abbr~result.amount }}</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</body>
</html>
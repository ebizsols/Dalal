{{ include('common/header.twig') }}
<form class="row" action="{{ action }}" method="post">
    <div class="col-lg-8">
        <div class="panel panel-default">
            <div class="panel-head">
                <div class="panel-title">
                    <i class="las la-envelope-open panel-head-icon"></i>
                    <span class="panel-title-text">{{ page_title }}</span>
                </div>
                <div class="panel-action">
                    <button type="submit" class="btn btn-primary btn-gradient btn-icon" name="submit" data-toggle="tooltip" title="{{ lang.text_save }}"><i class="las la-save"></i></button>
                </div>
            </div>
            <div class="panel-body">
                <input type="hidden" name="_token" value="{{ common.token }}">
                <div class="form-group">
                    <label class="col-form-label">{{ lang.text_user_type }} <span class="form-required">*</span></label>
                    <div class="input-group">
                        <div class="input-group-prepend"><span class="input-group-text"><i class="las la-user"></i></span></div>
                        <select name="receiver[user_type]" class="custom-select send-user-type" data-live-search="true" required>
                            <option value="">{{ lang.text_select_user_type }}</option>
                            {% for value in roles %}
                                <option value="{{ value.id }}">{{ value.name }}</option>
                            {% endfor %}
                            <option value="contact">{{ lang.text_contacts }}</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-form-label">{{ lang.text_subject }} <span class="form-required">*</span></label>
                    <div class="input-group">
                        <div class="input-group-prepend"><span class="input-group-text"><i class="las la-comment"></i></span></div>
                        <input type="text" name="receiver[subject]" class="form-control" placeholder="{{ lang.text_subject }} . . ." required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-form-label">{{ lang.text_message }}</label>
                    <textarea name="receiver[message]" class="summernote" required></textarea>
                </div>
            </div>
            
        </div>
    </div>
    <div class="col-lg-4">
        <div class="panel panel-default">
            <div class="panel-head">
                <div class="panel-title">
                    <i class="las la-user panel-head-icon"></i>
                    <span class="panel-title-text">{{ lang.text_select_receiver }}</span>
                </div>
                <div class="panel-action"></div>
            </div>
            <div class="panel-body">
                <div class="receiver-container"></div>
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="panel panel-default">
            <div class="panel-footer text-center">
                <button type="submit" name="submit" class="btn btn-primary btn-gradient btn-pill">{{ lang.text_save }}</button>
            </div>
        </div>
    </div> 
</form>
<!-- include summernote css/js-->
<link href="public/css/summernote-bs4.css" rel="stylesheet">
<script type="text/javascript" src="public/js/summernote-bs4.min.js"></script>
<script type="text/javascript" src="public/js/custom.summernote.js"></script>
{{ include('common/footer.twig') }}
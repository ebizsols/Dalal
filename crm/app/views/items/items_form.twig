{{ include('common/header.twig') }}
<form action="{{ action }}" method="post" enctype="multipart/form-data">
    <div class="panel panel-default">
        <div class="panel-head">
            <div class="panel-title">
                <i class="las la-list panel-head-icon"></i>
                <span class="panel-title-text">{{ page_title }}</span>
            </div>
            <div class="panel-action">
                <button type="submit" class="btn btn-primary btn-gradient btn-icon" name="submit" data-toggle="tooltip" title="{{ lang.text_save }}"><i class="las la-save"></i></button>
                <a href="{{ common.url_route }}items" class="btn btn-white btn-icon" data-toggle="tooltip" title="{{ lang.text_back_to_list }}"><i class="las la-reply"></i></a>
            </div>  
        </div>
        <div class="panel-body">
            <input type="hidden" name="id" value="{{ result.id }}">
            <input type="hidden" name="_token" value="{{ common.token }}">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="col-form-label">{{ lang.text_type }} <span class="form-required">*</span></label>
                        <div class="">
                            <div class="custom-control custom-radio custom-radio-1 custom-control-inline">
                                <input type="radio" id="goods" name="type" class="custom-control-input" value="1"{% if result.type == '1' %} checked{% endif %} required>
                                <label class="custom-control-label" for="goods">{{ lang.text_goods }}</label>
                            </div>
                            <div class="custom-control custom-radio custom-radio-1 custom-control-inline">
                                <input type="radio" id="servies" name="type" class="custom-control-input" value="2"{% if result.type == '2' %} checked{% endif %} required>
                                <label class="custom-control-label" for="servies">{{ lang.text_service }}</label>
                            </div>
                            <div class="custom-control custom-radio custom-radio-1 custom-control-inline">
                                <input type="radio" id="other" name="type" class="custom-control-input" value="3"{% if result.type == '3' %} checked{% endif %} required>
                                <label class="custom-control-label" for="other">{{ lang.text_other }}</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">{{ lang.text_name }} <span class="form-required">*</span></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="las la-certificate"></i></span>
                            </div>
                            <input type="text" class="form-control" value="{{ result.name }}" name="name" placeholder="{{ lang.text_name }}" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">{{ lang.text_unit }}</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="las la-balance-scale"></i></span>
                            </div>
                            <input type="text" class="form-control" value="{{ result.unit }}" name="unit" placeholder="{{ lang.text_unit }}">
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="col-form-label">{{ lang.text_price }} <span class="form-required">*</span></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <select class="custom-select" name="currency">
                                    {% for value in currency %}
                                        <option value="{{ value.id }}"{% if result.currency == value.id %} selected{% endif %}>{{ value.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <input type="text" class="form-control" name="price" value="{{ result.price }}" placeholder="{{ lang.text_price }}" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">{{ lang.text_description }}</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="las la-paragraph"></i></span>
                            </div>
                            <textarea class="form-control" rows="3" name="description" placeholder="{{ lang.text_description }}">{{ result.description }}</textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-footer text-center">
            <button type="submit" name="submit" class="btn btn-primary btn-gradient btn-pill">{{ lang.text_save }}</button>
        </div>
    </div>
</form>
{{ include('common/footer.twig') }}
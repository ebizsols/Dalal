{{ include('common/header.twig') }}
<form action="{{ action }}" method="post">
	<input type="hidden" name="_token" value="{{ common.token }}">
	<div class="panel panel-default">
		<div class="panel-head">
            <div class="panel-title">
                <i class="icon-bell panel-head-icon"></i>
                <span class="panel-title-text">{{ page_title }}</span>
            </div>
            <div class="panel-action">
                <button type="submit" class="btn btn-primary btn-gradient btn-icon" name="submit" data-toggle="tooltip" title="{{ lang.text_save }}"><i class="las la-save"></i></button>
                <a href="{{ common.url_route }}noticeboard" class="btn btn-white btn-icon" data-toggle="tooltip" title="{{ lang.text_back_to_list }}"><i class="las la-reply"></i></a>
            </div>  
        </div>
		<div class="panel-body">
			<div class="form-group">
				<label class="col-form-label">{{ lang.text_title }} <span class="form-required">*</span></label>
				<div class="input-group">
					<div class="input-group-prepend">
						<span class="input-group-text"><i class="las la-tag"></i></span>
					</div>
					<input type="text" name="notice[title]" class="form-control" value="{{ result.title }}" placeholder="{{ lang.text_title }} . . ." required>
				</div>
			</div>
			<div class="form-group">
				<label class="col-form-label">{{ lang.text_description }}</label>
				<div class="input-group">
					<div class="input-group-prepend">
						<span class="input-group-text"><i class="las la-paragraph"></i></span>
					</div>
					<textarea name="notice[description]" class="form-control" placeholder="{{ lang.text_description }} . . .">{{ result.description }}</textarea>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<label class="col-form-label">{{ lang.text_start_date }} <span class="form-required">*</span></label>
						<div class="input-group">
							<div class="input-group-prepend"><span class="input-group-text"><i class="las la-calendar"></i></span></div>
							<input type="text" name="notice[start_date]" class="form-control date" value="{{ result.start_date|date(common.info.date_format) }}" placeholder="{{ lang.text_start_date }} . . ." readonly required>
						</div>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<label class="col-form-label">{{ lang.text_end_date }} <span class="form-required">*</span></label>
						<div class="input-group">
							<div class="input-group-prepend"><span class="input-group-text"><i class="las la-calendar"></i></span></div>
							<input type="text" name="notice[end_date]" class="form-control date" value="{{ result.end_date|date(common.info.date_format) }}" placeholder="{{ lang.text_end_date }} . . ." readonly required>
						</div>
					</div>
				</div>
			</div>
			<div class="form-group">
				<label class="col-form-label">{{ lang.text_status }}</label>
				<div class="input-group">
					<div class="input-group-prepend">
						<span class="input-group-text"><i class="las la-check-square"></i></span>
					</div>
					<select name="notice[status]" class="custom-select">
						<option value="1" {{ result.status == '1' ? 'selected' : false }}>{{ lang.text_active }}</option>
						<option value="0" {{ result.status == '0' ? 'selected' : false }}>{{ lang.text_inactive }}</option>
					</select>
				</div>
			</div>
		</div>
		<input type="hidden" name="notice[id]" value="{{ result.id }}">
		<div class="panel-footer text-center">
			<button type="submit" name="submit" class="btn btn-primary btn-gradient btn-pill">{{ lang.text_save }}</button>
		</div>
	</div>
</form>
{{ include('common/footer.twig') }}
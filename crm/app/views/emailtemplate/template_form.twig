{{ include('common/header.twig') }}
<!-- payment Type page start -->
<div class="content">
    <div class="row">
        <div class="col-md-8">
            <form action="{{ action }}" method="post" enctype="multipart/form-data">
                <input type="hidden" name="_token" value="{{ common.token }}">
                <div class="panel panel-default">
                    <div class="panel-head">
                        <div class="panel-title">
                            <i class="las la-pen-alt panel-head-icon"></i>
                            <span class="panel-title-text">{{ result.name }}</span>
                        </div>
                        <div class="panel-action">
                            <button type="submit" class="btn btn-primary btn-gradient btn-icon" name="submit" data-toggle="tooltip" title="{{ lang.text_save }}"><i class="las la-save"></i></button>
                        </div>  
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="col-form-label">{{ lang.text_template~' '~lang.text_name }} <span class="form-required">*</span></label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="las la-tag"></i></span>
                                </div>
                                <input type="text" class="form-control" name="mail[name]" value="{{ result.name }}" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">{{ lang.text_subject }} <span class="form-required">*</span></label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="las la-tag"></i></span>
                                </div>
                                <input type="text" class="form-control" name="mail[subject]" value="{{ result.subject }}" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">{{ lang.text_body }}</label>
                            <textarea name="mail[message]" class="summernote">{{ result.message }}</textarea>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">{{ lang.text_status }} <span class="form-required">*</span></label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="las la-check-square"></i></span>
                                </div>
                                <select name="mail[status]" class="custom-select" required>
                                    <option value="1" {{ result.status == '1' ? 'selected' : false }}>{{ lang.text_send_mail }}</option>
                                    <option value="0" {{ result.status == '0' ? 'selected' : false }}>{{ lang.text_do_not_send_mail }}</option>
                                </select>
                            </div>
                        </div>
                        <input type="hidden" name="mail[template]" value="{{ result.template }}">
                    </div>
                    <div class="panel-footer text-center">
                        <button type="submit" name="submit" class="btn btn-primary btn-gradient btn-pill">{{ lang.text_save }}</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-4">
            {{ include('emailtemplate/template_menu.twig') }}
        </div>
    </div>
</div>
<!-- include summernote css/js-->
<link href="public/css/summernote-bs4.css" rel="stylesheet">
<script type="text/javascript" src="public/js/summernote-bs4.min.js"></script>
<script type="text/javascript" src="public/js/custom.summernote.js"></script>
{{ include('common/footer.twig') }}
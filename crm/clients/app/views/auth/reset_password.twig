{{ include('auth/auth_header.twig') }}
<div id="login-form" class="lgn-form ">
	<form class="form-vertical" action="{{ action }}" method="post">
		{% if success %}
			<div class="alert alert-success alert-dismissable">
				{{ success }}
				<a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
			</div>
		{% endif %}
		{% if error %}
			<div class="alert alert-danger alert-dismissable">
				{{ error }}
				<a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
			</div>
		{% endif %}
		<input type="hidden" name="_token" value="{{ token }}">
		<input type="hidden" name="mail" value="{{ mail }}">
		<input type="hidden" name="hash" value="{{ hash }}">
		<div class="lgn-input form-group">
			<label class="control-label">{{ lang.text_new_password }}</label>
			<input type="password" name="password" id="lgn-pass" class="form-control" placeholder="{{ lang.text_new_password }}" autocomplete="off">
		</div>
		<div class="lgn-input form-group">
			<label class="control-label">{{ lang.text_confirm_password }}</label>
			<input type="password" name="confirmpassword" id="lgn-cnfrmpass" class="form-control" placeholder="{{ lang.text_confirm_password }}" autocomplete="off">
		</div>
		<div class="lgn-input form-group">
			<label class="control-label">{{ lang.text_what_is~' '~random(1, 10)~' '~lang.text_plus~' '~random(1, 30) }} = </label>
			<input type="text" id="lgn-bot" class="form-control" placeholder="Answer" autocomplete="off">
		</div>
		<div class="lgn-submit">
			<button type="submit" id="reset-submit" class="btn btn-primary btn-pill btn-lg" name="reset">{{ lang.text_reset }}</button>
		</div>
	</form>
</div>
{{ include('auth/auth_footer.twig') }}


